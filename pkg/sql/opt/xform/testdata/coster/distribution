exec-ddl
CREATE TABLE abc_part (
  a INT,
  b INT,
  c INT,
  d INT,
  PRIMARY KEY (a, b, c),
  INDEX c_idx (c) PARTITION BY RANGE (c) (
    PARTITION c_low VALUES FROM (MINVALUE) TO (100),
    PARTITION c_high VALUES FROM (100) TO (MAXVALUE)
  )
) PARTITION BY RANGE (a) (
  PARTITION low VALUES FROM (MINVALUE) TO (100),
  PARTITION high VALUES FROM (100) TO (MAXVALUE)
);
----

exec-ddl
ALTER PARTITION low OF TABLE abc_part
    CONFIGURE ZONE USING constraints='[+region=us-east]'
----

exec-ddl
ALTER PARTITION high OF TABLE abc_part
    CONFIGURE ZONE USING constraints='[+region=eu-west]'
----

exec-ddl
ALTER PARTITION c_low OF INDEX abc_part@c_idx
    CONFIGURE ZONE USING constraints='[+region=eu-west]'
----

exec-ddl
ALTER PARTITION c_high OF INDEX abc_part@c_idx
    CONFIGURE ZONE USING constraints='[+region=us-east]'
----

exec-ddl
SHOW CREATE abc_part
----
TABLE abc_part
 ├── a int not null
 ├── b int not null
 ├── c int not null
 ├── d int
 ├── INDEX primary
 │    ├── a int not null
 │    ├── b int not null
 │    ├── c int not null
 │    └── distribution
 │         ├── from:[] to:[100] node:1
 │         └── from:[100] to:[] node:2
 └── INDEX c_idx
      ├── c int not null
      ├── a int not null
      ├── b int not null
      └── distribution
           ├── from:[] to:[100] node:2
           └── from:[100] to:[] node:1

